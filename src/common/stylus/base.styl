html,body{
    line-height:1
    font-weight:200
    font-family:'PingFang SC', 'Microsoft'
}
@media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5){
    .border-1px{
        &::after{
            -webkit-transform: scaleY(.7)
            transform: scaleY(.7)
        }
    }
    .border-t1px{
        &::before{
            -webkit-transform: scaleY(.7)
            transform: scaleY(.7)
        }
    }
}
@media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2){
    .border-1px{
        &::after{
            -webkit-transform: scaleY(.5)
            transform: scaleY(.5)
        }
    }
    .border-t1px{
        
        &::before{
            -webkit-transform: scaleY(.5)
            transform: scaleY(.5)
        }
    }
}
.clearfix{
    &:after{
        display block
        content:' '
        height:0
        line-height: 0
        font-size: 0
        clear:both
        visibility: hidden
    }
} 
.fl{
    float:left
}
.fr{
    float:right
}
